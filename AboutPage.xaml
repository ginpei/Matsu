<Page x:Class="Matsu.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Matsu"
      mc:Ignorable="d"
      Title="About">
    <Grid Margin="20">
        <StackPanel>
            <!-- Application Title -->
            <TextBlock Text="Matsu" FontSize="24" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            
            <!-- Version -->
            <TextBlock Text="Version 1.0.0" FontSize="14" Foreground="Gray" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            
            <!-- Description -->
            <TextBlock Text="WPF System Control Application" FontSize="14" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <TextBlock Text="A system tray application for managing audio and network monitoring." 
                       FontSize="12" Foreground="Gray" Margin="0,0,0,20" 
                       HorizontalAlignment="Center" TextWrapping="Wrap"/>
            
            <Separator Margin="0,10,0,20"/>
            
            <!-- Features -->
            <TextBlock Text="Features:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <StackPanel Margin="20,0,0,0">
                <TextBlock Text="• Real-time volume control with slider interface" FontSize="12" Margin="0,2"/>
                <TextBlock Text="• Audio device mute/unmute functionality" FontSize="12" Margin="0,2"/>
                <TextBlock Text="• WiFi connection monitoring" FontSize="12" Margin="0,2"/>
                <TextBlock Text="• Network name display" FontSize="12" Margin="0,2"/>
                <TextBlock Text="• System tray integration" FontSize="12" Margin="0,2"/>
            </StackPanel>
            
            <Separator Margin="0,20,0,20"/>
            
            <!-- Technical Info -->
            <TextBlock Text="Built with:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <StackPanel Margin="20,0,0,0">
                <TextBlock Text="• .NET 8.0" FontSize="12" Margin="0,2"/>
                <TextBlock Text="• Windows Presentation Foundation (WPF)" FontSize="12" Margin="0,2"/>
                <TextBlock Text="• WinUI NavigationView" FontSize="12" Margin="0,2"/>
                <TextBlock Text="• AudioSwitcher.AudioApi.CoreAudio" FontSize="12" Margin="0,2"/>
                <TextBlock Text="• ManagedNativeWifi" FontSize="12" Margin="0,2"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>