<Window x:Class="Matsu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Matsu"
        mc:Ignorable="d"
        Title="Matsu - System Control" Height="480" Width="700"
        Background="#F3F3F3">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Navigation Sidebar -->
        <Border Grid.Column="0" Background="#FAFAFA" BorderBrush="#E5E5E5" BorderThickness="0,0,1,0">
            <StackPanel Margin="0,20,0,0">
                <!-- Dashboard Navigation Item -->
                <Button x:Name="DashboardNavButton" 
                        Style="{x:Null}"
                        Background="Transparent" 
                        BorderThickness="0" 
                        HorizontalAlignment="Stretch" 
                        HorizontalContentAlignment="Left"
                        Padding="20,12"
                        Margin="0,2"
                        Click="NavigationButton_Click"
                        Tag="Dashboard">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border" 
                                    Background="{TemplateBinding Background}"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter x:Name="ContentPresenter" 
                                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <!-- Normal hover state (not selected) -->
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsMouseOver" Value="True"/>
                                        <Condition Property="local:MainWindow.IsSelectedNavButton" Value="False"/>
                                    </MultiTrigger.Conditions>
                                    <Setter TargetName="Border" Property="Background" Value="#E8E8E8"/>
                                </MultiTrigger>
                                
                                <!-- Selected hover state -->
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsMouseOver" Value="True"/>
                                        <Condition Property="local:MainWindow.IsSelectedNavButton" Value="True"/>
                                    </MultiTrigger.Conditions>
                                    <Setter TargetName="Border" Property="Background" Value="#E8E8E8"/>
                                    <Setter TargetName="ContentPresenter" Property="TextElement.Foreground" Value="Black"/>
                                </MultiTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE10F;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="#0078D4"/>
                        <TextBlock Text="Dashboard" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <!-- About Navigation Item -->
                <Button x:Name="AboutNavButton" 
                        Style="{x:Null}"
                        Background="Transparent" 
                        BorderThickness="0" 
                        HorizontalAlignment="Stretch" 
                        HorizontalContentAlignment="Left"
                        Padding="20,12"
                        Margin="0,2"
                        Click="NavigationButton_Click"
                        Tag="About">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border" 
                                    Background="{TemplateBinding Background}"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter x:Name="ContentPresenter" 
                                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <!-- Normal hover state (not selected) -->
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsMouseOver" Value="True"/>
                                        <Condition Property="local:MainWindow.IsSelectedNavButton" Value="False"/>
                                    </MultiTrigger.Conditions>
                                    <Setter TargetName="Border" Property="Background" Value="#E8E8E8"/>
                                </MultiTrigger>
                                
                                <!-- Selected hover state -->
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsMouseOver" Value="True"/>
                                        <Condition Property="local:MainWindow.IsSelectedNavButton" Value="True"/>
                                    </MultiTrigger.Conditions>
                                    <Setter TargetName="Border" Property="Background" Value="#E8E8E8"/>
                                    <Setter TargetName="ContentPresenter" Property="TextElement.Foreground" Value="Black"/>
                                </MultiTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE946;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="#0078D4"/>
                        <TextBlock Text="About" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
        
        <!-- Content Area -->
        <Border Grid.Column="1" Background="White" Margin="0">
            <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden"/>
        </Border>
    </Grid>
</Window>
