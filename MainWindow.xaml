<Window x:Class="Matsu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Matsu"
        mc:Ignorable="d"
        Title="Matsu - Volume Control" Height="300" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Current Volume Display -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Name="DeviceNameLabel" Text="Audio Device: Loading..." FontSize="12" Foreground="Gray"/>
            <TextBlock Name="VolumeStatusLabel" Text="Volume: --%" FontSize="16" FontWeight="Bold" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Mute/Unmute Button -->
        <Button Grid.Row="1" Name="MuteToggleButton" Content="Mute/Unmute"
                Height="40" FontSize="14" Margin="0,0,0,10"
                Click="MuteToggleButton_Click"/>

        <!-- Volume Slider -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="Volume Level" FontSize="12" Margin="0,0,0,5"/>
            <Slider Name="VolumeSlider" Minimum="0" Maximum="100"
                    Height="30" Margin="0,0,0,10"
                    ValueChanged="VolumeSlider_ValueChanged"
                    TickFrequency="10" TickPlacement="BottomRight"/>
            <TextBlock Name="SliderValueLabel" Text="50%"
                       FontSize="10" HorizontalAlignment="Center" Foreground="Gray"/>
        </StackPanel>

        <!-- Status Message -->
        <TextBlock Grid.Row="3" Name="StatusLabel" Text="Ready"
                   FontSize="12" Foreground="Green"
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
    </Grid>
</Window>
