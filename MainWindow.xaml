<Window x:Class="Matsu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Matsu"
        mc:Ignorable="d"
        Title="Matsu - System Control" Height="380" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- WiFi Status Display -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Network Connection" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Name="WiFiStatusLabel" Text="WiFi: Checking..." FontSize="12" Foreground="Gray"/>
            <TextBlock Name="NetworkNameLabel" Text="" FontSize="12" Foreground="DarkBlue" Margin="0,2,0,0"/>
            <Separator Margin="0,15,0,0"/>
        </StackPanel>

        <!-- Current Volume Display -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Audio Control" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Name="DeviceNameLabel" Text="Audio Device: Loading..." FontSize="12" Foreground="Gray"/>
            <TextBlock Name="VolumeStatusLabel" Text="Volume: --%" FontSize="12" Margin="0,2,0,0"/>
        </StackPanel>

        <!-- Mute/Unmute Button -->
        <Button Grid.Row="2" Name="MuteToggleButton" Content="Mute/Unmute"
                Height="40" FontSize="14" Margin="0,0,0,10"
                Click="MuteToggleButton_Click"/>

        <!-- Volume Slider -->
        <StackPanel Grid.Row="3" Margin="0,0,0,20">
            <TextBlock Text="Volume Level" FontSize="12" Margin="0,0,0,5"/>
            <Slider Name="VolumeSlider" Minimum="0" Maximum="100"
                    Height="30" Margin="0,0,0,10"
                    ValueChanged="VolumeSlider_ValueChanged"
                    TickFrequency="10" TickPlacement="BottomRight"
                    IsMoveToPointEnabled="True"/>
        </StackPanel>

        <!-- Status Message -->
        <TextBlock Grid.Row="4" Name="StatusLabel" Text="Ready"
                   FontSize="12" Foreground="Green"
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
    </Grid>
</Window>
